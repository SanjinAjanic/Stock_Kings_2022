@using Stock_Kings.Services.Interfaces
@model IndexModel
@using Stock_Kings.Model;
@inject IStocksRepo stocksRepo 
@{
    ViewData["Title"] = "Home page";
    var stocks = stocksRepo.GetAll();
   
}

<div class="text-center"> 
    count of stocks: @stocks.Count()
    <ol>
        @foreach(var stock in stocks)  {
        <li> @stock.Name @(stock.Price+"$") <a asp-page="/SaveStock" asp-route-id="@stock.Id">Save Stock</a></li>
        
        




      }

    </ol>
    @User
</div>
